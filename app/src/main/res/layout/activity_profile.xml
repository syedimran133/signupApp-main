<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity"
    android:paddingBottom="@dimen/_30sdp"
    android:background="@drawable/backg"
    android:paddingLeft="@dimen/_5sdp"
    android:paddingRight="@dimen/_5sdp"
    android:paddingTop="@dimen/_30sdp"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_20sdp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:gravity="center"
                    android:text="Edit Profile"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"/>
                <TextView
                    android:onClick="Cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="20dp"
                    android:text="Cancel"
                    android:layout_centerVertical="true"
                    android:textColor="@color/steal"/>
            </RelativeLayout>
            <RelativeLayout
                android:onClick="UPdateProfile"
                android:layout_width="@dimen/_85sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_height="@dimen/_85sdp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="@dimen/_85sdp"
                    android:background="@drawable/circle_border"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/white_logo"
                    android:layout_height="@dimen/_85sdp"/>
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="@dimen/_30sdp"
                    android:padding="@dimen/_2sdp"
                    android:src="@drawable/edit_image"
                    android:layout_alignParentRight="true"
                    android:layout_margin="@dimen/_8sdp"
                    android:layout_alignParentBottom="true"
                    android:layout_height="@dimen/_30sdp"/>
            </RelativeLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tlPassWord"
                android:layout_width="match_parent"
                android:layout_above="@+id/tlConfirmPass"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                app:endIconTint="@color/white"
                android:textColorHint="#FFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_FullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/white"
                    android:backgroundTint="@color/white"
                    android:hint="Full Name"
                    android:textColor="#FFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tlUserName"
                android:layout_width="match_parent"
                android:layout_above="@+id/tlConfirmPass"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                app:endIconTint="@color/white"
                android:textColorHint="#FFF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edit_UserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/white"
                    android:backgroundTint="@color/white"
                    android:hint="User Name"
                    android:textColor="#FFFFFF" />
            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColorHint="@color/steal"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:text="Bio"
                android:visibility="gone"
                android:textColor="@color/white"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rect_border"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/etBio"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/mina_reguler"
                    android:layout_margin="2dp"
                    android:textSize="15dp"
                    android:gravity="top"
                    android:inputType="textEmailAddress"
                    android:maxLines="4"
                    android:ellipsize="end"
                    android:hint="About Details"
                    android:padding="10dp"
                    android:background="@null"
                    android:text=""
                    android:textColorHint="#9C9A9A"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/location_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="19sp"
                    android:layout_marginStart="@dimen/_3sdp"
                    android:text="Show the geolocation of \nthe departure"
                    android:textColorHint="#9C9A9A"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="right">
                <CheckBox
                    android:id="@+id/location_cb"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:checked="true"
                    android:src="@drawable/apple"/></LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <Button
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="@dimen/_38sdp"
        android:onClick="saveProfile"
        android:fontFamily="@font/mina_reguler"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/rounded_button_editback"
        android:textColor="@color/theme"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:text="Save"/>
</RelativeLayout>