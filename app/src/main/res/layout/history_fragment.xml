<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme"
    android:paddingBottom="@dimen/_50sdp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_20sdp"
        >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="History"
        android:layout_centerVertical="true"
        android:textColor="@color/white"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnSendItems"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_height="@dimen/_27sdp"
            android:fontFamily="@font/mina_reguler"
            android:layout_marginLeft="30dp"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:background="@drawable/rounded_button_editback"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Sent items"/>
        <Button
            android:id="@+id/btnReceiveItems"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginTop="20dp"
            android:layout_height="@dimen/_27sdp"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:fontFamily="@font/mina_reguler"
            android:layout_marginRight="30dp"
            android:background="@drawable/rounded_button_editback_blue"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Received items"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListitem"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_height="match_parent"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListitemReceive"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_height="match_parent"
        />
    <TextView
        android:id="@+id/tvNoItems"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="18sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Currently No Items Available"
        android:layout_centerVertical="true"
        android:textColor="@color/white"/>

</LinearLayout>