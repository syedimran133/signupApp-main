<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    android:orientation="vertical">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/ll_title"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp"
                android:background="@color/theme"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/ivBack"
                    android:onClick="Back"
                    android:layout_alignParentLeft="true"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/back_arrow"/>
                <TextView
                    android:fontFamily="@font/mina_reguler"
                    android:gravity="center"
                    android:layout_toRightOf="@+id/ivBack"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Select Time"
                    android:textSize="@dimen/_12sdp"/>
                <TextView
                    android:fontFamily="@font/mina_reguler"
                    android:id="@+id/title"
                    android:padding="5dp"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text=""
                    android:textSize="@dimen/_14sdp"/>
            </RelativeLayout>
            <TextView
                android:fontFamily="@font/mina_reguler"
                android:padding="5dp"
                android:gravity="center"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:text="You can send files up to 3 receivers."
                android:textSize="@dimen/_12sdp"/>
            <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/rounded_button_editback"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etRecvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/_10sdp"
                    android:textColorHint="@color/color_grey"
                    android:background="@null"
                    android:layout_centerHorizontal="true"
                    android:hint="Receiver Email"
                    android:layout_centerVertical="true"
                    android:textColor="@color/theme"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/rounded_button_editback"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etRecvEmail2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/_10sdp"
                    android:background="@null"
                    android:textColorHint="@color/color_grey"
                    android:layout_centerHorizontal="true"
                    android:hint="Receiver Email"
                    android:layout_centerVertical="true"
                    android:textColor="@color/theme"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/rounded_button_editback"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/etRecvEmail3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:layout_gravity="center_vertical"
                    android:padding="@dimen/_10sdp"
                    android:background="@null"
                    android:textColorHint="@color/color_grey"
                    android:layout_centerHorizontal="true"
                    android:hint="Receiver Email"
                    android:layout_centerVertical="true"
                    android:textColor="@color/theme"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llNext"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:background="@drawable/rounded_button_editback"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:layout_centerHorizontal="true"
                    android:text="Next"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>